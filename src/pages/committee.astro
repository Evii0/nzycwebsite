---
import Layout from '../layouts/Layout.astro';
import Markdown from '../components/Markdown.astro';
---

<script
    src="https://code.jquery.com/jquery-3.5.1.slim.min.js"
    integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj"
    crossorigin="anonymous"></script>
<script
    src="https://cdn.jsdelivr.net/npm/bootstrap@4.5.3/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-ho+j7jyWK8fNQe+A12Hb8AhRq26LrZ/JpcUGGOn+Y7RsweNrtN/tE3MoK7ZeZDyx"
    crossorigin="anonymous"></script>
<link
    href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
    rel="stylesheet"
    integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
    crossorigin="anonymous"
/>

<style>
    .main img {
        width: 100%;
        height: auto;
        border-radius: 10px;
    }

    .main h2 {
        font-weight: 300;
    }

    .my-3 {
        margin-top: 1rem;
        margin-bottom: 1rem;
    }
    .my-5 {
        margin-top: 3rem;
        margin-bottom: 3rem;
    }
    .banner2 {
        background-color: #f8f9fa;
        padding: 20px;
        text-align: center;
    }
    .banner2 h1 {
        font-weight: 300;
        margin-bottom: 20px;
    }
    .hosts {
        margin-top: 40px;
    }
</style>

<Layout title="Committee and Hosts">
    <br />
    <div class="row">
        <div class="col-sm-8 offset-sm-2 main" style="text-align: center;">
            <h1>Committee</h1>
            <img src="/images/group.jpg" class="my-5" />
            <h4>Peter Alexander, Anthony Godfrey, Marta Teal, Hadassah France, Joshua Gore, Louis Bennet, Hannah O'Grady</h4>
        </div>
    </div>
    <div class="row hosts">
        <div class="col-sm-8 offset-sm-2 main" style="text-align: center;">
            <h1>Hosts</h1>
            <div class="row">
                <div class="col-sm-4">
                    <img src="/images/h1.jpg" class="my-3" />
                    <h4>Bro. Mat and Sis. Shannon Keys</h4>
                    <p>Wellington</p>
                </div>
                <div class="col-sm-4">
                    <img src="/images/h2.jpg" class="my-3" />
                    <h4>Bro. Paul and Sis. Jan Teal</h4>
                    <p>Hutt Valley</p>
                </div>
                <div class="col-sm-4">
                    <img src="/images/h3.jpg" class="my-3" />
                    <h4>Bro. Ben and Sis. Liz O'Grady</h4>
                    <p>Christchurch North</p>
                </div>
            </div>
        </div>
    </div>
</Layout>
